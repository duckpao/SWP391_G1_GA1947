    </servlet>
    <servlet>
        <servlet-name>VerifyResetServlet</servlet-name>
        <servlet-class>Controller.VerifyResetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
