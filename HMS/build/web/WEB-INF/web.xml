<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    
    <!-- Servlets from first config -->
    <servlet>
        <servlet-name>ManageRequestsServlet</servlet-name>
        <servlet-class>Controller.ManageRequestsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateMedicationRequestServlet</servlet-name>
        <servlet-class>Controller.UpdateMedicationRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancelMedicationRequestServlet</servlet-name>
        <servlet-class>Controller.CancelMedicationRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewRequestHistoryServlet</servlet-name>
        <servlet-class>Controller.ViewRequestHistoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewMedicineServlet</servlet-name>
        <servlet-class>Controller.ViewMedicineServlet</servlet-class>
    </servlet>

    <!-- Servlet mappings from first config -->
    <servlet-mapping>
        <servlet-name>DoctorDashboardServlet</servlet-name>
        <url-pattern>/doctor-dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateMedicationRequestServlet</servlet-name>
        <url-pattern>/create-request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageRequestsServlet</servlet-name>
        <url-pattern>/manage-requests</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateMedicationRequestServlet</servlet-name>
        <url-pattern>/update-request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancelMedicationRequestServlet</servlet-name>
        <url-pattern>/cancel-request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewRequestHistoryServlet</servlet-name>
        <url-pattern>/view-request-history</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewMedicineServlet</servlet-name>
        <url-pattern>/view-medicine</url-pattern>
    </servlet-mapping>
    
    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>

    <!-- Servlets from second config -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>controllers.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ToggleUserServlet</servlet-name>
        <servlet-class>controllers.ToggleUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>controllers.EditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateServlet</servlet-name>
        <servlet-class>controllers.CreateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>controllers.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagePermissionsServlet</servlet-name>
        <servlet-class>controllers.ManagePermissionsServlet</servlet-class>
    </servlet>

    <!-- Servlet mappings from second config -->
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ToggleUserServlet</servlet-name>
        <url-pattern>/admin/users/toggle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/admin/users/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateServlet</servlet-name>
        <url-pattern>/admin/users/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/admin/users/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagePermissionsServlet</servlet-name>
        <url-pattern>/admin/permissions</url-pattern>
    </servlet-mapping>

</web-app>
