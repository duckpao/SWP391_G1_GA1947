<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <!-- User Management Servlets -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>Controller.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ToggleUserServlet</servlet-name>
        <servlet-class>Controller.ToggleUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>Controller.EditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateServlet</servlet-name>
        <servlet-class>Controller.CreateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>Controller.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagePermissionsServlet</servlet-name>
        <servlet-class>Controller.ManagePermissionsServlet</servlet-class>
    </servlet>

    <!-- Servlet Mappings for User Management -->
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ToggleUserServlet</servlet-name>
        <url-pattern>/admin/users/toggle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/admin/users/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateServlet</servlet-name>
        <url-pattern>/admin/users/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/admin/users/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagePermissionsServlet</servlet-name>
        <url-pattern>/admin/permissions</url-pattern>
    </servlet-mapping>

    <!-- Medication Request Servlets -->
    <servlet>
        <servlet-name>ManageRequestsServlet</servlet-name>
        <servlet-class>Controller.ManageRequestsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateMedicationRequestServlet</servlet-name>
        <servlet-class>Controller.UpdateMedicationRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancelMedicationRequestServlet</servlet-name>
        <servlet-class>Controller.CancelMedicationRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewRequestHistoryServlet</servlet-name>
        <servlet-class>Controller.ViewRequestHistoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewMedicineServlet</servlet-name>
        <servlet-class>Controller.ViewMedicineServlet</servlet-class>
    </servlet>

    <!-- Servlet Mappings for Medication Requests -->
    <servlet-mapping>
        <servlet-name>DoctorDashboardServlet</servlet-name>
        <url-pattern>/doctor-dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateMedicationRequestServlet</servlet-name>
        <url-pattern>/create-request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageRequestsServlet</servlet-name>
        <url-pattern>/manage-requests</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateMedicationRequestServlet</servlet-name>
        <url-pattern>/update-request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancelMedicationRequestServlet</servlet-name>
        <url-pattern>/cancel-request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewRequestHistoryServlet</servlet-name>
        <url-pattern>/view-request-history</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewMedicineServlet</servlet-name>
        <url-pattern>/view-medicine</url-pattern>
    </servlet-mapping>

    <!-- Additional Servlets -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>Controller.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>Controller.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>Controller.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>Controller.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoctorDashboardServlet</servlet-name>
        <servlet-class>Controller.DoctorDashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateMedicationRequestServlet</servlet-name>
        <servlet-class>Controller.CreateMedicationRequestServlet</servlet-class>
    </servlet>

    <!-- Servlet Mappings for Additional Servlets -->
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/forgot-password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/change-password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/reset-password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
